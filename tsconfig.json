{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      // "dom.iterable",
      "esnext"
    ],
    "baseUrl": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "paths": {
      "@/*": ["src/*"],
      "@views/*" : ["src/views/*"],
      "@assets/*": ["src/assets/*"],
      "@tools/*": ["src/tools/*"],
      "@components/*": ["src/components/*"]
    },
  },
  "include": [
    "src"
, "src/.ts"  ]
}
